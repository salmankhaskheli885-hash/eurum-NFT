
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "role": {
          "type": "string",
          "enum": ["user", "partner", "admin"],
          "description": "The user's role in the system."
        },
        "status": {
            "type": "string",
            "enum": ["Active", "Suspended"],
            "description": "The current status of the user's account."
        },
        "shortUid": {
            "type": "string"
        },
        "balance": {
            "type": "number"
        },
        "currency": {
            "type": "string"
        },
        "vipLevel": {
            "type": "number"
        },
        "vipProgress": {
            "type": "number"
        },
        "kycStatus": {
            "type": "string",
            "enum": ["approved", "pending", "rejected", "unsubmitted"]
        },
        "referralLink": {
            "type": "string"
        },
        "referredBy": {
            "type": "string",
            "description": "The UID of the user who referred this user."
        },
        "lastWithdrawalDate": {
            "type": "string",
            "format": "date-time",
            "description": "The ISO string of the last withdrawal request date."
        },
        "failedDepositCount": {
            "type": "number",
            "description": "Tracks the number of failed or rejected deposits for a user."
        }
      },
      "required": ["uid", "email", "role", "balance", "currency", "vipLevel", "vipProgress", "kycStatus", "failedDepositCount", "status"]
    },
    "InvestmentPlan": {
        "title": "Investment Plan",
        "description": "Defines an investment plan available to users.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "dailyReturn": { "type": "number" },
            "durationDays": { "type": "number" },
            "minInvestment": { "type": "number" },
            "requiredVipLevel": { "type": "number" },
            "imageUrl": { "type": "string" },
            "isActive": { "type": "boolean" }
        },
        "required": ["name", "dailyReturn", "durationDays", "minInvestment", "requiredVipLevel", "imageUrl", "isActive"]
    },
    "ChatAgent": {
      "title": "Chat Agent",
      "description": "Represents a support agent for the live chat.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The agent's login email."
        },
        "canApproveDeposits": {
          "type": "boolean",
          "description": "Whether the agent can handle deposit-related chats."
        },
        "canApproveWithdrawals": {
          "type": "boolean",
          "description": "Whether the agent can handle withdrawal-related chats."
        },
        "depositsApproved": {
          "type": "number",
          "description": "Count of deposits approved by this agent."
        },
        "depositsRejected": {
          "type": "number",
          "description": "Count of deposits rejected by this agent."
        },
        "withdrawalsApproved": {
          "type": "number",
          "description": "Count of withdrawals approved by this agent."
        },
        "withdrawalsRejected": {
          "type": "number",
          "description": "Count of withdrawals rejected by this agent."
        }
      },
      "required": ["email", "canApproveDeposits", "canApproveWithdrawals", "depositsApproved", "depositsRejected", "withdrawalsApproved", "withdrawalsRejected"]
    },
     "ChatRoom": {
      "title": "Chat Room",
      "description": "Represents a private chat session between a user and an agent.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The UID of the user." },
        "userName": { "type": "string", "description": "The display name of the user." },
        "agentId": { "type": "string", "description": "The UID of the assigned agent." },
        "agentName": { "type": "string", "description": "The display name of the agent." },
        "createdAt": { "type": "string", "format": "date-time" },
        "lastMessage": { "type": "string" },
        "lastMessageAt": { "type": "string", "format": "date-time" },
        "isResolved": { "type": "boolean" }
      },
      "required": ["userId", "userName", "createdAt", "lastMessageAt", "isResolved"]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "Represents a single message within a chat room.",
      "type": "object",
      "properties": {
        "roomId": { "type": "string", "description": "The ID of the chat room." },
        "senderId": { "type": "string", "description": "The UID of the message sender (user or agent)." },
        "senderType": { "type": "string", "enum": ["user", "agent", "system"] },
        "text": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["roomId", "senderId", "senderType", "text", "timestamp"]
    },
    "AppSettings": {
        "title": "App Settings",
        "description": "Global settings for the application.",
        "type": "object",
        "properties": {
            "adminWalletNumber": { "type": "string" },
            "adminWalletName": { "type": "string" },
            "adminAccountHolderName": { "type": "string" },
            "withdrawalFee": { "type": "number" },
            "minDeposit": { "type": "number" },
            "maxDeposit": { "type": "number" },
            "minWithdrawal": { "type": "number" },
            "maxWithdrawal": { "type": "number" },
            "lastAssignedAgentIndex": { "type": "number", "description": "Internal counter for round-robin agent assignment." }
        },
        "required": ["adminWalletNumber", "adminWalletName", "adminAccountHolderName", "withdrawalFee"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/investment_plans/{planId}": {
        "schema": {
            "$ref": "#/entities/InvestmentPlan"
        },
        "description": "Stores all available investment plans."
    },
    "/chat_agents/{agentId}": {
      "schema": {
        "$ref": "#/entities/ChatAgent"
      },
      "description": "Stores all approved chat support agents and their permissions."
    },
    "/chat_rooms/{roomId}": {
        "schema": { "$ref": "#/entities/ChatRoom" },
        "description": "Stores all chat sessions between users and agents."
    },
    "/chat_rooms/{roomId}/messages/{messageId}": {
        "schema": { "$ref": "#/entities/ChatMessage" },
        "description": "Stores all messages for a specific chat room."
    },
    "/app/settings": {
        "schema": { "$ref": "#/entities/AppSettings" },
        "description": "Stores global application settings."
    }
  }
}
