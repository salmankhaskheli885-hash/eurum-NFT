
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "role": {
          "type": "string",
          "enum": ["user", "partner", "admin"],
          "description": "The user's role in the system."
        },
        "shortUid": {
            "type": "string"
        },
        "balance": {
            "type": "number"
        },
        "currency": {
            "type": "string"
        },
        "vipLevel": {
            "type": "number"
        },
        "vipProgress": {
            "type": "number"
        },
        "kycStatus": {
            "type": "string",
            "enum": ["approved", "pending", "rejected", "unsubmitted"]
        },
        "referralLink": {
            "type": "string"
        },
        "referredBy": {
            "type": "string",
            "description": "The UID of the user who referred this user."
        }
      },
      "required": ["uid", "email", "role", "balance", "currency", "vipLevel", "vipProgress", "kycStatus"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    }
  }
}
