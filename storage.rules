
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow write access only to authenticated users
    // This is a basic rule. For production, you might want more granular control,
    // e.g., match /receipts/{userId}/{fileName} { allow write: if request.auth.uid == userId; }
    match /{allPaths=**} {
      allow read; // Allow public read for simplicity, can be restricted
      allow write: if request.auth != null;
    }
  }
}
