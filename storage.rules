rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to everyone for all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow write access only for authenticated users on specific paths
    match /investment_plans/{planId}/{fileName} {
      allow write: if request.auth != null;
    }

    match /receipts/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /chat_images/{roomId}/{fileName} {
       allow write: if request.auth != null;
    }
  }
}
    